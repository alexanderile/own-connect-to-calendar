.Date-picker-container
  &__element
    border-radius 5px
    background-color #ffffff
    border 1px solid #cccccc
    border-collapse separate
    position relative
    padding 10px 13px 8px 13px
    display block
    margin-right 1em
    &::-webkit-input-placeholder
      font-size 16px
      color: #aaaabd
  > div
    display inline-block
.react-datepicker__close-icon
  position absolute
  &:after
    right -190px
    top -20px